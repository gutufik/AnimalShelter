@model Core.ViewModels.AviaryModel
@*можно лучше: код не очищен перед релизом*@
<h2>Добавить питомца</h2>

<form asp-action="AddAnimal" asp-controller="Aviary" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        @*<div class="form-group">
            <label>Имя</label><br />
            <input type="text" asp-for="Name">
        </div>*@
        <input type="hidden" asp-for="aviary.AviaryID" value=@Model.aviary.AviaryID>
        <div class="form-group">
            <select asp-for="animal.AnimalID">
                @foreach (var a in Model.animals)
                {
                    <option value="@a.AnimalID">@a.Name</option>
                }
            </select>
        </div><br />
        <div class="form-group">
            <input type="submit" value="Добавить" asp-route-aviaryID=@Model.aviary.AviaryID class="btn btn-outline-dark" />
        </div>
    </div>
</form>
