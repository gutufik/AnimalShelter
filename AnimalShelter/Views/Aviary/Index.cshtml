@using Core;
@model List<Aviary>
<h2>Aviaries</h2>


<div class="row">
    @foreach (var aviary in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        <img class="card-img-top" src="~/images/project_icon.jpg"
                             alt="@aviary.Name" />
                    </div>
                    <div>
                        <p class="font-weight-normal">@aviary.Name</p>
                    </div>
                    <div class="text-center">
                        <a class="btn btn-danger" asp-controller="Aviary"
                           asp-action="Animals" asp-route-id="@aviary.AviaryID"
                           role="button">
                            Показать животных
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>