@using Core;
@model List<Animal>
<h2>Animals</h2>

<div class="row">
    @foreach (var animal in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card h-100">
                <div class="card-body">
                    <div>
                        <img class="card-img-top" src="http://theoldreader.com/kittens/600/400"
                             alt="@animal.Name" />
                    </div>
                    <div>
                        <p class="font-weight-normal">@animal.Name</p>
                    </div>
                    <div class="text-center">
                        <a class="btn btn-danger" asp-controller="Project"
                           asp-action="Remove" asp-route-id="@animal.ID"
                           role="button">
                            Remove
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>