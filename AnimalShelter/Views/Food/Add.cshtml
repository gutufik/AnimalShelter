@model Core.Food

<h2>Пополнение кормов</h2>

<form asp-action="Add" asp-controller="Food" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label>Корм</label><br />
            <input type="text" asp-for="FoodName">
        </div>
        <div class="form-group">
            <label asp-for="Weight">Вес</label><br />
            <input type="text" asp-for="Weight" />
        </div>
        <div class="form-group">
            <input type="submit" value="Пополнить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
