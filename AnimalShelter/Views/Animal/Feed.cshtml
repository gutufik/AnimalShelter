model Core.ViewModels.FeedModel
@using Core

<h2>Покормить</h2>

<form asp-action="Feed" asp-controller="Animal" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>

        <div class="form-group">
            <label >Animal</label>
            <!--<input type="hidden" asp-for="diet.AnimalID" value=@Model.animal.AnimalID>-->
        </div>
        <div class="form-group">
            <select >
                @foreach (var f in DataAccess.GetFoods())
                {
                    <option value="@f.Id">@f.FoodName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label >Вес</label><br />
            <input type="text"  />
        </div>
        <div class="form-group">
            <input type="submit" value="Покормить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
